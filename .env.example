# Database Configuration
DB_TYPE=sqlite  # sqlite or postgresql
DB_PATH=data/database.sqlite  # For SQLite
# DB_HOST=localhost  # For PostgreSQL
# DB_PORT=5432  # For PostgreSQL
# DB_NAME=funding_rate_analysis  # For PostgreSQL
# DB_USER=username  # For PostgreSQL
# DB_PASSWORD=password  # For PostgreSQL

# Exchange API Keys
# dYdX
DYDX_API_KEY=your_api_key_here
DYDX_API_SECRET=your_api_secret_here
DYDX_PASSPHRASE=your_passphrase_here

# GMX
GMX_API_KEY=your_api_key_here
GMX_API_SECRET=your_api_secret_here

# Synthetix
SYNTHETIX_API_KEY=your_api_key_here
SYNTHETIX_API_SECRET=your_api_secret_here

# Perpetual Protocol
PERP_API_KEY=your_api_key_here
PERP_API_SECRET=your_api_secret_here

# Other Exchange Keys
# Add other exchange API keys as needed

# Application Settings
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
DATA_RETENTION_DAYS=365  # How many days of historical data to keep
COLLECTION_INTERVAL=3600  # Data collection interval in seconds (1 hour default)
TIMEZONE=UTC  # Timezone for timestamps

# Feature Flags
ENABLE_DASHBOARD=false  # Enable/disable web dashboard
ENABLE_NOTIFICATIONS=false  # Enable/disable notifications
